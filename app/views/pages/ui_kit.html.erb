<!-- Sidebar for md+ screens -->
<div class="flex-shrink-0 px-3 pb-3 bg-white d-none d-md-block position-fixed" style="width: 280px;">
  <ul class="list-unstyled ps-0">
  	<li class="border-top my-3"></li>  
    	<%= render 'shared/ui_kit_nav' %>
    <li class="border-top my-3"></li>    
  </ul>
</div>
<!-- Top nav for xs & sm screens -->
<div class="navbar navbar-expand-md navbar-light navbar-ui d-md-none py-2 px-3">
  <div class="container-fluid">
    <div></div>
    <!-- Hamburger menu -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
      	<%= render 'shared/ui_kit_nav', components: @components, layouts: @layouts %>
      </ul>
    </div>
  </div>
</div>
<section class="main-content py-5" id="top">
  <div class="container">
    <!-- Components -->
    <% if @components.present? %>
      <h1 class="text-4xl font-bold mb-4">Components</h1>
      <p class="text-sm">Dolor sit eu enim qui quis elit fugiat irure in aute. Adipisicing aute cupidatat dolor laborum quis tempor consectetur anim minim aute.</p>
      <% @components.each do |component| %>
        <%= render 'shared/ui_kit_section', element: component %>
      <% end %>
    <% end %>
    <!-- Layouts -->
    <% if @layouts.present? %>
      <h1 class="text-4xl font-bold mt-5 mb-4">Layouts</h1>
      <p class="text-sm">Dolor sit eu enim qui quis elit fugiat irure in aute. Adipisicing aute cupidatat dolor laborum quis tempor consectetur anim minim aute.</p>
      <% @layouts.each do |layout| %>
        <%= render 'shared/ui_kit_section', element: layout %>
      <% end %>
    <% end %>
    <!-- PLAYGROUND -->
  </div>
</section>